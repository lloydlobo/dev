# =============================================================================
# Cat Funcs
catr () {
	tail -n "+$1" $3 | head -n "$( ( $2 - $1 + 1 ) )"
}

cat1Line() {
	cat $1 | tr -d "\n"
}

# =============================================================================
# Path Funcs
addToPath() {
	if [[ "$PATH" != *"$1"* ]]; then
		export PATH=$PATH:$1
	fi
}

addToPathFront() {
	if [[ "$PATH" != *"$1"* ]]; then
		export PATH=$1:$PATH
	fi
}

