# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

# Sources:
# - https://github.com/ThePrimeagen/dev/blob/master/env/.config/i3status/config

general {
        colors = true
        interval = 5
}

order += "load"
order += "memory"
order += "disk /"

order += "battery 0" # "battery all"
order += "tztime local"

# 1 CPU
load {
        format = "cpu %1min"
}

# 2 MEM
memory {
        format = "mem %used"
        threshold_degraded = "10%"
        format_degraded = "MEMORY: %free"
}

# 3 DISK
disk "/" {
        format = "disks %avail"
}

battery all {
        format = "%status %percentage %remaining"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}
