# ==========================
# CHANGING COLORS
# ==========================
# Original Colors
# class                 border  backgr. text    indicator child_border
# client.focused          #4c7899 #285577 #ffffff #2e9ef4   #285577
# client.focused_inactive #333333 #5f676a #ffffff #484e50   #5f676a
# client.unfocused        #333333 #222222 #888888 #292d2e   #222222
# client.urgent           #2f343a #900000 #ffffff #900000   #900000
# client.placeholder      #000000 #0c0c0c #ffffff #000000   #0c0c0c
# client.background       #ffffff
#
# Here are the key color codes from your Lua configuration (for the Brightburn colorscheme):
# • `#ffa263` — Orange accent (used for `Boolean`, `Structure`, etc.)
# • `#dca3a3` — Light red-pink (used for `Character`, `SpecialChar`, etc.)
# • `#333333` — Dark gray (used for `Comment`, `Float`, `Folded`, etc.)
# • `#8faf9f` — Teal (used for `Cursor`, `Search`, etc.)
# • `#ffd787` — Light yellow (used for `Keyword`, `Function`, etc.)
# • `#ffcfaf` — Pale orange (used for `Define`, `PreProc`, `Macro`, etc.)
# • `#709080` — Grayish green (used for `DiffAdd`)
# • `#93b3a3` — Muted green (used for `FoldColumn`)
# • `#c0bed1` — Light gray (used for `Float`, `StatusLine`)
# • `#e37170` — Light red (used for `Error`)
# • `#dcdccc` — Off-white (used for `Normal`, `Operator`, `LineNr`, etc.)
# • `#75b5aa` — Tealish-green (used for `SpellRare`, `Terminal`)
# • `#6a9fb5` — Light blue (used for `Directory`, `DiffChange`, etc.)
# • `#ffdf9f` — Yellowish (used for `MatchParen`)

# Set the colors
set $bg_dark_color #222222
set $bg_color #333333
set $fg_color #dcdccc
set $accent_color #ffa263
set $error_color #e37170
set $highlight_color #ffd787
set $highlight_alt_color #ffcfaf
set $search_color #8faf9f
set $comment_color #93b3a3
set $match_paren_color #ffdf9f
set $active_window_border #ffa263
set $inactive_window_border #333333
set $focus_color #75b5aa

# Darken the foreground for better visibility on the workspace numbers
set $workspace_fg_color #c0bed1
set $workspace_inactive_fg_color #333333

# Window border colors
client.focused          $bg_color $bg_dark_color $accent_color
client.unfocused        $inactive_window_border $bg_color $fg_color
client.focused_inactive $bg_color $fg_color $fg_color
client.urgent           $error_color $bg_color $fg_color

# ==========================
# I3BAR
# ==========================
# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    status_command i3status
    tray_output primary

    # Disable mouse scroll workspace
    bindsym button4 nop
    bindsym button5 nop
    bindsym button6 nop
    bindsym button7 nop

    # Take a screenshot by right clicking on the bar
    bindsym --release button3 exec --no-startup-id import /tmp/latest-screenshot.png

    colors {
        background $bg_color
        statusline $fg_color
        separator $comment_color

        focused_workspace  $bg_color $bg_dark_color $accent_color
        active_workspace   $highlight_alt_color $bg_color $fg_color
        inactive_workspace $bg_color $workspace_inactive_fg_color $comment_color
        urgent_workspace   $error_color $bg_color $fg_color
    }
}

