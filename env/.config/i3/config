# RELOAD/RESTART/EXIT i3
# ==========================
# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# ==========================
# WINDOW RESIZING
# ==========================
# resize window (you can also use the mouse for that)
mode "resize" {
    # These bindings trigger as soon as you enter the resize mode

    # Pressing left will shrink the window’s width.
    bindsym h resize shrink width 10 px or 10 ppt
    # Pressing down will grow the window’s height.
    bindsym j resize grow height 10 px or 10 ppt
    # Pressing up will shrink the window’s height.
    bindsym k resize shrink height 10 px or 10 ppt
    # Pressing right will grow the window’s width.
    bindsym l resize grow width 10 px or 10 ppt

    # same bindings, but for the arrow keys
    bindsym Left resize shrink width 10 px or 10 ppt
    bindsym Down resize grow height 10 px or 10 ppt
    bindsym Up resize shrink height 10 px or 10 ppt
    bindsym Right resize grow width 10 px or 10 ppt

    # back to normal: Enter or Escape or $mod+r
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"


# ==========================
# VOLUME CONTROL MODE
# ==========================
# Define the "mixer" mode with volume control
# Bind $mod+Shift+v to enter the "mixer" mode
mode "mixer" {
    # Increase volume by 5%
    bindsym k exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% && $refresh_i3status
    # Decrease volume by 5%
    bindsym j exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% && $refresh_i3status
    # Mute/unmute the sound
    bindsym m exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
    # Mute/unmute the microphone
    bindsym c exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status
    # Return to normal mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+Shift+v mode "default"
}
bindsym $mod+Shift+v mode "mixer"

# ==========================
# CUSTOM APPLICATIONS MODE
# ==========================
# Define the "apps" mode to launch my long running custom applications
# Bind $mod+Shift+a to enter the "apps" mode
mode "apps" {
    # Launch razoredge GUI window
    bindsym r exec --no-startup-id ~/go/bin/razoredge && $refresh_i3status
    # TODO: Launch dirview open current dir in browser 
    # bindsym d exec --no-startup-id ~/go/bin/dirview && $refresh_i3status
    # TODO: Launch gitback tui in CWD terminal
    # bindsym g exec --no-startup-id ~/go/bin/gitback && $refresh_i3status
    # Return to normal mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+Shift+a mode "default"
}
bindsym $mod+Shift+a mode "apps"

# ==========================
# REDSHIFT MODES
# ==========================
# redshift modes to make looking at screen bearable for longer times
# See https://github.com/HarshalRathore/my-i3-config/blob/81559e692a7c4176890ac9f07ae1f24904c76cb8/.config/i3/config#L670C1-L685C2
bindsym $mod+Shift+d mode "$mode_redshift"
set $mode_redshift Set colour temperature: (a)uto, (r)eset, (2)500K, (3)000K, (4)000K, (5)000K
set $kill_redshift pkill -9 redshift;
mode "$mode_redshift" {
    bindsym a exec --no-startup-id "$kill_redshift redshift -P -t 5000:4000", mode "default"
    bindsym r exec --no-startup-id "$kill_redshift redshift -x", mode "default"
    bindsym 2 exec --no-startup-id "$kill_redshift redshift -P -O 2500", mode "default"
    bindsym 3 exec --no-startup-id "$kill_redshift redshift -P -O 3000", mode "default"
    bindsym 4 exec --no-startup-id "$kill_redshift redshift -P -O 4000", mode "default"
    bindsym 5 exec --no-startup-id "$kill_redshift redshift -P -O 5000", mode "default"
    # exit mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

